<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BasicAnimation.MainPage"
             Title="Basic animation demos">
    <StackLayout Margin="0,20,0,0">
        <Button Text="Rotate Animation" 
                Clicked="OnRotateAnimationButtonClicked" />
        <Button Text="Relative Rotate Animation" 
                Clicked="OnRelativeRotateAnimationButtonClicked" />
        <Button Text="Rotate Animation with Anchors" 
                Clicked="OnRotateAnimationWithAnchorsButtonClicked" />
        <Button Text="Multiple Rotations" 
                Clicked="OnMultipleRotationAnimationButtonClicked" />
        <Button Text="Scale Animation" 
                Clicked="OnScaleAnimationButtonClicked" />
        <Button Text="Relative Scale Animation" 
                Clicked="OnRelativeScaleAnimationButtonClicked" />
        <Button Text="Transform Animation" 
                Clicked="OnTransformAnimationButtonClicked" />
        <Button Text="Fade Animation" 
                Clicked="OnFadeAnimationButtonClicked" />
    </StackLayout>
</ContentPage>
