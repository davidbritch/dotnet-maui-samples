<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BasicAnimation.RelativeScaleAnimationPage" Title="Relative Scale Animation">
	<StackLayout Margin="0,20,0,0">
		<Image x:Name="image" Source="dotnet_bot.png" VerticalOptions="Center" />
		<Button x:Name="startButton" Text="Start Animation" Clicked="OnStartAnimationButtonClicked" VerticalOptions="End" />
		<Button x:Name="cancelButton" Text="Cancel Animation" Clicked="OnCancelAnimationButtonClicked" IsEnabled="false" />
	</StackLayout>
</ContentPage>