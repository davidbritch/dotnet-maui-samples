<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AnimationDemo.ColorAnimationPage" 
             Title="Color Animations" 
             IconImageSource="xaml.png">
	<StackLayout Margin="10,20,10,20">
		<BoxView x:Name="boxView" Color="Blue" HeightRequest="100" HorizontalOptions="Fill" />
		<Button Text="Animate BoxView" Clicked="OnAnimateBoxViewButtonClicked" HorizontalOptions="Center" VerticalOptions="Center" />
		<Label x:Name="label" Text="Lorem ipsum dolor sit amet" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
		<Button Text="Animate Label" Clicked="OnAnimateLabelButtonClicked" HorizontalOptions="Center" VerticalOptions="Center" />
		<Button Text="Animate Page Background" Clicked="OnAnimatePageBackgroundButtonClicked" HorizontalOptions="Center" VerticalOptions="Center" />
		<Button x:Name="cancelButton" Text="Cancel Animation" Clicked="OnCancelAnimationButtonClicked" IsEnabled="false" />
	</StackLayout>
</ContentPage>
